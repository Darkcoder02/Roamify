<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Second_Page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/display_image"
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:src="@drawable/second_place_image"
            tools:ignore="MissingConstraints"
            android:layout_marginBottom="20dp"
            />

        <EditText
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Destination"
            android:textColor="#673AB7"
            android:textColorHighlight="#673AB7"


            android:textColorHint="#673AB7"
            android:textColorLink="#009688"
            android:textSize="52dp"
            tools:ignore="MissingConstraints"
            android:layout_marginBottom="0dp"
            />

        <ImageButton
            android:id="@+id/Search_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5E35B1"
            android:contentDescription="search_button"
            android:src="@android:drawable/ic_menu_search"
            android:layout_marginBottom="20dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/display2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Some Recommended Destinations"
                android:textColor="#2BAF48"
                android:textColorHighlight="#4CAF50"
                android:textSize="25sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/image_button1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="place1"
                android:src="@drawable/second_place_image" />

            <ImageButton
                android:id="@+id/image_button2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="place2"
                android:src="@drawable/logo" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/place1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="place1"
                android:textColor="#2BAF48"
                android:textColorHighlight="#4CAF50"
                android:textSize="25sp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/place2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:text="place2"
                android:textColor="#2BAF48"
                android:textColorHighlight="#4CAF50"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>